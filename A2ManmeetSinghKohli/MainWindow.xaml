        <TextBox x:Name="txtFee" Canvas.Left="112" TextWrapping="Wrap" Canvas.Top="410" Width="105" HorizontalAlignment="Left" VerticalAlignment="Top" IsReadOnly="True"/>
        <TextBox x:Name="txtAttorney" Canvas.Left="112" TextWrapping="Wrap" Canvas.Top="374" Width="105" HorizontalAlignment="Left" VerticalAlignment="Top" IsReadOnly="True"/>
